<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>IP Tracker Modern</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body>

  <div class="container-sm py-5">
    <h1 class="mb-4 text-center fw-bold text-primary" data-aos="fade-down">
      üåç IP Tracker Modern
    </h1>

    <!-- Form -->
    <form id="trackForm" class="mb-4" data-aos="fade-up">
      <div class="input-group shadow-sm">
        <input type="text" class="form-control form-control-lg" placeholder="Masukkan IP, contoh: 8.8.8.8" id="ipInput">
        <button class="btn btn-lg btn-primary" type="submit">
          <i class="fas fa-search"></i> Lacak
        </button>
      </div>
    </form>

    <!-- Loader -->
    <div id="loader" class="text-center my-3 d-none">
      <div class="spinner-border text-primary" role="status"></div>
      <p class="mt-2 text-muted">Melacak IP...</p>
    </div>

    <!-- Hasil -->
    <div id="resultSection" class="row g-4 d-none" data-aos="fade-up" data-aos-delay="200">
      <!-- Card Info -->
      <div class="col-md-6">
        <div class="card custom-card h-100">
          <div class="card-body">
            <h5 class="card-title mb-3"><i class="fas fa-info-circle text-primary me-2"></i>Info IP</h5>
            <ul class="list-group" id="ipDetails"></ul>
          </div>
        </div>
      </div>

      <!-- Card Map -->
      <div class="col-md-6">
        <div class="card custom-card h-100">
          <div class="card-body">
            <h5 class="card-title mb-3"><i class="fas fa-map-location-dot text-success me-2"></i>Lokasi</h5>
            <div id="mapContainer" class="ratio ratio-4x3 rounded overflow-hidden border"></div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <script src="/spa.js"></script>
  <script>AOS.init();</script>

</body>
</html>
